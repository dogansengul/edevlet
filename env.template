# =============================================================================
# E-DEVLET AUTOMATION - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Bu dosyayı .env olarak kopyalayın ve kendi değerlerinizi girin:
# cp env.template .env

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
# Options: development, production, testing

# =============================================================================
# FLASK WEB SERVER CONFIGURATION
# =============================================================================
FLASK_HOST=127.0.0.1
FLASK_PORT=5002
FLASK_DEBUG=true
# Production'da false yapın: FLASK_DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION  
# =============================================================================
DATABASE_PATH=queue_clean.db
# Production için: DATABASE_PATH=/var/lib/edevlet/production.db

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_API_BASE_URL=https://shut-b0g3czdtc0fgajbq.northeurope-01.azurewebsites.net
BACKEND_API_EMAIL=hr@domain.com
BACKEND_API_PASSWORD=HRPass123!
BACKEND_API_TIMEOUT=30

# =============================================================================
# E-DEVLET VERIFICATION SETTINGS
# =============================================================================
EDEVLET_VERIFICATION_ENABLED=false
EDEVLET_VERIFICATION_URL=https://www.turkiye.gov.tr/belge-dogrulama
VERIFICATION_TIMEOUT=30
BROWSER_HEADLESS=true
# Production'da true tutun: BROWSER_HEADLESS=true

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
BATCH_SIZE=1
PROCESSING_INTERVAL_HOURS=2
MAX_RETRY_COUNT=3

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# FILE STORAGE PATHS
# =============================================================================
DOWNLOADS_DIR=downloads
SCREENSHOTS_DIR=screenshots
LOGS_DIR=logs

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=*
# Production için belirli domainler: CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# =============================================================================
# BROWSER CONFIGURATION
# =============================================================================
BROWSER_WINDOW_SIZE=1920,1080
BROWSER_STEALTH_MODE=true
BROWSER_USE_UNDETECTED=true
BROWSER_TIMEOUT=30



# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
MAX_CONCURRENT_WORKERS=2
CONNECTION_POOL_SIZE=10
REQUEST_TIMEOUT=30 